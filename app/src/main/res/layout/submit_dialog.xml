<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="350dp"
    android:background="@drawable/lay_background"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_gravity="center_vertical">

    <ImageView
        android:id="@+id/img_cancel"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:src="@drawable/icancel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_are_u_sure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="140dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="150dp"
        android:fontFamily="@font/hammersmith_one"
        android:text="Are you sure"
        android:textColor="#686868"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_help"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:src="@drawable/ihelp"
        app:layout_constraintStart_toEndOf="@+id/txt_are_u_sure"
        app:layout_constraintTop_toTopOf="@+id/txt_are_u_sure" />

    <TextView
        android:id="@+id/txt_yes"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="146dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="150dp"
        android:background="@drawable/txt_background"
        android:fontFamily="@font/hammersmith_one"
        android:gravity="center_horizontal"
        android:text="Yes"
        android:textColor="#EDB406"
        android:textSize="25sp"
        app:drawableTint="#FFC107"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_are_u_sure" />

</androidx.constraintlayout.widget.ConstraintLayout>